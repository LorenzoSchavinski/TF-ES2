#!/bin/sh
# Maven Wrapper Script
if [ -z "$MAVEN_HOME" ] ; then
  PRG="$0"
  while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
      PRG="$link"
    else
      PRG=`dirname "$PRG"`"/$link"
    fi
  done
  MAVEN_HOME=`dirname "$PRG"`
  MAVEN_HOME=`cd "$MAVEN_HOME"; pwd`
fi

MAVEN_CMD_LINE_ARGS="$@"

cd "`dirname $0`" || exit 1

exec "$MAVEN_HOME/bin/mvn" "$MAVEN_CMD_LINE_ARGS"
